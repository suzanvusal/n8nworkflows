  "nodes": [
    {
      "id": "9b2fdc0f-8c71-4ea9-a9d0-df470f2778df",
      "name": "Schedule Trigger",
      "type": "n8n-nodes-base.scheduleTrigger",
      "position": [
        -560,
        0
      ],
      "parameters": {
        "rule": {
          "interval": [
            {
              "field": "hours",
              "hoursInterval": 21,
