    {
      "id": "1caf810e-8b40-4430-8840-8e17a176b67a",
      "name": "Add to Google Sheets",
      "type": "n8n-nodes-base.googleSheets",
      "position": [
        1780,
        360
      ],
      "parameters": {
        "columns": {
          "value": {
            "Name": "={{ $('Webhook').item.json.body.text }}",
