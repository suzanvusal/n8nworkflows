# ============================================================================
# MEDCARDS.AI - Environment Variables Template
# Copy this file to .env.local and fill in your actual values
# ============================================================================

# ============================================================================
# SUPABASE CONFIGURATION
# Get these from: https://app.supabase.com/project/_/settings/api
# ============================================================================
NEXT_PUBLIC_SUPABASE_URL=https://your-project.supabase.co
NEXT_PUBLIC_SUPABASE_ANON_KEY=your-anon-key-here
SUPABASE_SERVICE_ROLE_KEY=your-service-role-key-here

# ============================================================================
# ANTHROPIC CLAUDE API
# Get your API key from: https://console.anthropic.com/
# ============================================================================
ANTHROPIC_API_KEY=sk-ant-your-api-key-here

# ============================================================================
# APPLICATION CONFIGURATION
# ============================================================================
NEXT_PUBLIC_APP_URL=http://localhost:3000
NODE_ENV=development

# ============================================================================
# FEATURE FLAGS (Optional)
# ============================================================================
ENABLE_CHAT_HISTORY=true
ENABLE_BADGES=true
ENABLE_ANALYTICS=true

# ============================================================================
# AI MODEL CONFIGURATION (Optional - Defaults provided)
# ============================================================================
# Which Claude model to use for different prompts
AI_COACH_MODEL=claude-sonnet-4-5-20250929
AI_FEEDBACK_MODEL=claude-sonnet-4-5-20250929
AI_TUTOR_MODEL=claude-sonnet-4-5-20250929

# Max tokens for AI responses
AI_MAX_TOKENS=2000

# ============================================================================
# RATE LIMITING (Optional - for production)
# ============================================================================
RATE_LIMIT_REQUESTS_PER_MINUTE=60

# ============================================================================
# ANALYTICS (Optional - when you add tracking)
# ============================================================================
# NEXT_PUBLIC_VERCEL_ANALYTICS_ID=your-analytics-id
# SENTRY_DSN=your-sentry-dsn

# ============================================================================
# MONITORING (Optional)
# ============================================================================
# LOG_LEVEL=info
